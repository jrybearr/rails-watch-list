<div class="banner d-flex justify-content-center">
  <h1 class="font">Your Lists of movies</h1>
</div>
<div class="body-background p-5">
  <div class="cards-section">
    <% @lists.each do |list| %>
      <div class="list-category m-3">
        <h5 class="content font"><%= link_to "#{list.name}", list_path(list), class: "list-name" %></h5>
      </div>
    <% end %>
    <button class="new-list">
      <%= link_to "Add new list", new_list_path, class: "new-list-link font" %>
    </button>
  </div>

</div>
